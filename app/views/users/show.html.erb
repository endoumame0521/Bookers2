<div class="col-3">
  <%= render '/users/info' %>
  <%= render '/books/new' %>
</div>

<div class="col-9 pl-5">

  <h2>Books</h2>

  <table class="table table-hover table-inverse">
  	<thead>
  	  <tr>
  	  	<th></th>
  	  	<th>Title</th>
  	  	<th>Opinion</th>
  	  </tr>
  	</thead>

  	<tbody>
      <% @books.each do |book| %>
        <tr>
          <td>
          	<%= link_to user_path(@user.id) do %>
          	<%= attachment_image_tag @user, :profile_image, :fill, 50, 50,　format: 'jpeg', fallback: "no_image.jpg", size: 40 %>
            <% end %>
          </td>
          <td><%= link_to book.title, book_path(book.id)%></td>
          <td><%= book.body %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <h4>Following</h4>

  <table class="table">
    <thead>
      <tr>
        <th></th>
        <th>name</th>
        <th colspan="2"></th>
      </tr>
    </thead>

    <tbody>
      <% @user.following.each do |user| %>
        <tr>
          <td><%= attachment_image_tag user, :profile_image, :fill, 50, 50,　format: 'jpeg', fallback: "no_image.jpg", size: 40 %></td>
          <td><%= user.name %></td>
          <td><%= link_to 'Show', user_path(user) %></td>
          <td><%= render partial: 'users/follow_form', locals: { user: user } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <h4>Followers</h4>

  <table class="table">
    <thead>
      <tr>
        <th></th>
        <th>Name</th>
        <th colspan="2"></th>
      </tr>
    </thead>

    <tbody>
      <% @user.followers.each do |user| %>
        <tr>
          <td><%= attachment_image_tag user, :profile_image, :fill, 50, 50,　format: 'jpeg', fallback: "no_image.jpg", size: 40 %></td>
          <td><%= user.name %></td>
          <td><%= link_to 'Show', user_path(user) %></td>
          <td><%= render partial: 'users/follow_form', locals: { user: user } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>


</div>



